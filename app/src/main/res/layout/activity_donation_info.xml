<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDonationInfo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblInfoTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/lblInfoTop"
                android:visibility="gone"
                android:id="@+id/clDonateFood">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llSectionOne"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:padding="5dp"
                    android:background="@drawable/dashboard_section_bg"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:text="1. Food details"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/spinner_bg">

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:contentDescription="Food type"
                                android:layout_marginStart="8dp"
                                android:prompt="@string/spinner_hint"
                                android:id="@+id/spFoodType"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorSecondary"
                            android:text="Food Type"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/llPackDate"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="Preparation Date"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/edit_text_bg"
                            android:hint="29/08/2023"
                            android:focusable="false"
                            android:id="@+id/etPreparationDate"
                            android:padding="5dp"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="Valid Until"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/edit_text_bg"
                            android:focusable="false"
                            android:id="@+id/etExpiryDate"
                            android:hint="29/08/2023"
                            android:padding="5dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Quantity"/>
                        <EditText
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:hint="100"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:background="@drawable/edit_text_bg"
                            android:id="@+id/etQuantity"/>
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:contentDescription="Food quantity"
                            android:id="@+id/spQuantityUnits"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/spinner_bg"
                            android:orientation="horizontal">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="8dp"
                                android:contentDescription="Food quality"
                                android:id="@+id/spQuality"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/colorSecondary"
                            android:padding="5dp"
                            android:layout_marginStart="8dp"
                            android:layout_gravity="center_vertical"
                            android:text="Quality"/>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/spinner_bg"
                            android:orientation="horizontal">
                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginStart="8dp"
                                android:contentDescription="Select packaging"
                                android:id="@+id/spPackage"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/colorSecondary"
                            android:text="Packaging"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llSectionTwo"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@id/llSectionOne"
                    android:background="@drawable/dashboard_section_bg"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/llExpandCollapse">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. Storage and handling (optional)"
                            android:padding="8dp"
                            android:textStyle="bold"
                            android:drawableEnd="@drawable/keyboard_arrow_down"
                            android:drawablePadding="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/llDonorOptional"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Storage conditions"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_bg"
                            android:minLines="4"
                            android:gravity="bottom"
                            android:inputType="textCapSentences|textMultiLine"
                            android:padding="5dp"
                            android:hint="Describe storage conditions"
                            android:id="@+id/etStorageConditions"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Handling instructions"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:gravity="bottom"
                            android:padding="5dp"
                            android:hint="Provide handling instructions"
                            android:inputType="textCapSentences|textMultiLine"
                            android:background="@drawable/edit_text_bg"
                            android:id="@+id/etHandling"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special considerations"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:background="@drawable/edit_text_bg"
                            android:gravity="bottom"
                            android:hint="Any special considerations if any"
                            android:inputType="textCapSentences|textMultiLine"
                            android:padding="5dp"
                            android:id="@+id/etSpecialConsiderations"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clMakeRequest"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clDonateFood">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dashboard_section_bg">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg"
                        android:layout_marginTop="15dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:id="@+id/spFoodTypeRecipient"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginStart="10dp"
                        android:background="?attr/colorSecondary"
                        android:text="Food Type"/>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Quantity"/>
                    <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="100"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:background="@drawable/edit_text_bg"
                        android:id="@+id/etQuantityRecipient"/>
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="Food quantity"
                        android:id="@+id/spQuantityUnitsRecipient"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg"
                        android:layout_marginTop="15dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:id="@+id/spFoodUrgency"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginStart="10dp"
                        android:background="?attr/colorSecondary"
                        android:text="Urgency"/>
                </RelativeLayout>

            </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/clMakeRequest"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/dashboard_section_bg"
                android:id="@+id/rlAddress">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llAddress"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/spinner_bg">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/rgPickUpPoint">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rbDefaultAddress"
                            android:buttonTint="@color/info"
                            android:text="Default"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rbSpecifyAddress"
                            android:buttonTint="@color/info"
                            android:text="Specify"/>
                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rgPickUpPoint"
                        android:id="@+id/llPickDeliveryLocation"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/spinner_bg"
                                android:padding="3dp"
                                android:layout_marginTop="15dp">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etPickDeliveryCounty"
                                    android:padding="8dp"
                                    android:background="?attr/colorSecondary"
                                    android:visibility="visible"
                                    android:layout_marginTop="5dp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:background="?attr/colorSecondary"
                                android:layout_marginStart="8dp"
                                android:text="County/Region"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/spinner_bg"
                                android:padding="3dp"
                                android:layout_marginTop="15dp">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etPickDeliveryTown"
                                    android:padding="8dp"
                                    android:background="?attr/colorSecondary"
                                    android:visibility="visible"
                                    android:layout_marginTop="5dp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:background="?attr/colorSecondary"
                                android:layout_marginStart="8dp"
                                android:text="City/Town"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/spinner_bg"
                                android:padding="3dp"
                                android:layout_marginTop="15dp">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/etPickDeliveryAddress"
                                    android:padding="8dp"
                                    android:background="?attr/colorSecondary"
                                    android:visibility="visible"
                                    android:layout_marginTop="5dp" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:background="?attr/colorSecondary"
                                android:layout_marginStart="8dp"
                                android:text="Street Address"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/txtAddressLbl"
                    android:background="?attr/colorSecondary"/>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rlAddress"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCancel"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAllCaps="false"
                    android:textColor="@color/LightGrey"
                    android:text="Cancel"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSubmit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAllCaps="false"
                    android:textColor="@color/LightGrey"
                    android:text="Submit"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>