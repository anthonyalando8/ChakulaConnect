<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:theme="@style/Theme.ChakulaConnect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/cl_btn_viewActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ib_remove_activity">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/civ_activity_image"
            android:src="@drawable/activity"
            android:padding="5dp"
            android:background="@drawable/circular_bg_avatar"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/civ_activity_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:singleLine="true"
            android:paddingStart="8dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textSize="16sp"
            android:id="@+id/txt_activity_name"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="3dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/txt_activity_description"
            android:paddingStart="8dp"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/civ_activity_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_activity_name"
            app:layout_constraintBottom_toTopOf="@id/txt_activity_date"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/civ_activity_image"
            app:layout_constraintBottom_toBottomOf="@id/civ_activity_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:textSize="12dp"
            android:id="@+id/txt_activity_date"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/close_white"
        android:id="@+id/ib_remove_activity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        app:tint="@color/info" />
</androidx.constraintlayout.widget.ConstraintLayout>